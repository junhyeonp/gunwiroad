<%- include('common/header.ejs') %>
<header class="border_bottom">
    <img src="../file/header_logo_black.png" alt="">
</header>

<div class="grid_container profile-page">
    <div class="profile">
        <div class="profile-info">
            <div class="name"><span>서재현</span> 님 환영합니다!</div>
            <div class="level">Level <span class="level-num"></span></div>
        </div>
        <div class="profile-img-wrapper">
            <img src="../file/profile_img.png" alt="">
        </div>
    </div>
    <div class="myinfo">
        <div class="title">나의정보</div>
        <div class="myaccount-management item">
            <div class="item-title">
                <img src="../file/myaccount_management_icon.png" alt="">
                <div>내 계정관리</div>
            </div>
            <div class="item-rightside">
                <img src="../file/left_arrow_gray.png" alt="">
            </div>
        </div>
        <div class="myaccount-management item">
            <div class="item-title">
                <img src="../file/myzzim_icon.png" alt="">
                <div>나의 찜</div>
            </div>
            <div class="item-rightside">
                <span class="number">5개</span>
                <img src="../file/left_arrow_gray.png" alt="">
            </div>
        </div>
        <div class="myaccount-management item">
            <div class="item-title">
                <img src="../file/coupon_box_icon.png" alt="">
                <div>쿠폰함</div>
            </div>
            <div class="item-rightside">
                <span class="number coupon-amount"></span>
                <img src="../file/left_arrow_gray.png" alt="">
            </div>
        </div>
        <div class="coupon-box"></div>
    </div>
    <div class="bottom-menu">
        <div class="item">
            <img src="../file/announcement_icon.png" alt="">
            <div>공지사항</div>
        </div>
        <div class="item">
            <img src="../file/invite_friends_icon.png" alt="">
            <div>친구초대</div>
        </div>
        <div class="item">
            <img src="../file/customer_service_center_icon.png" alt="">
            <div>고객센터</div>
        </div>
    </div>
</div>
<script src="../js/profile.js"></script>
